<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- <link href="css/style.css" rel="stylesheet" /> -->
  </head>
  <body>

    <%  let id = note.id;
        let title = note.title;
        let content = note.content;
        let is_starred = note.is_starred;
        let tags = note.tags;    %>

    <h1>Update note</h1>

    <form action="/notes/<%=id%>?_method=PATCH" method="post">
      <div>
        <label for="title">Title: </label>
        <input type="text" id="title" name="title" value="<%= title %>" required />
      </div>
      <br />
      <div>
        <label for="content">Content: </label>
        <textarea id="content" name="content" rows="10" cols="30"><%= content %></textarea>
      </div>
      <br />
      <div>
        <label for="tag">Tag: </label>
        <input type="text" id="tag" name="tags" value="<%= tags %>" required />
      </div>
      <br />
      <div>
        <input type="checkbox" id="starred" name="is_starred" <% if(is_starred) { %> checked <% }%> />
        <label for="starred">Add to favorite </label>
      </div>
      <br />
      <div>
        <button type="submit">Submit</button>
      </div>
    </form>

    <% if(locals.error) { %>
        <p style="color: red;">
          <%=  error %>
        </p>
    <%  }%>

  </body>
</html>
